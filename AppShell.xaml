<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonasApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonasApp"
    xmlns:views="clr-namespace:PersonasApp.Views"
    Title="PersonasApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="HOME">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>

        <Tab Title="PERSONAS">
            <ShellContent ContentTemplate="{DataTemplate views:PersonaView}" Route="PersonasPage" />
        </Tab>

        <Tab Title="GESTION">
            <ShellContent ContentTemplate="{DataTemplate views:GestionView}" Route="GestionPage" />
        </Tab>

    </TabBar>





</Shell>
